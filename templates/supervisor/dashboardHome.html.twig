<script>
    $(document).ready(function() {
        $('#selectCentral, #selectRnr, #selectRnd').select2();
    });
    window.onload = function() {
        var currentUrl = window.location.href;
        var deletedA = {{deletedA|default(0)}};
        var deletedM = {{deletedM|default(0)}};
        var uptadedread = {{uptadedread|default(0)}};

        // Extraire la partie de base de l'URL
        var baseUrl = currentUrl.split("/").slice(0, 3).join("/");

        // Vérifier si l'URL contient les mots clés spécifiques
        if (currentUrl.includes('deletemessage') || currentUrl.includes('sendmessage') || currentUrl.includes('updatemessage') || deletedA || deletedM || uptadedread) {
            if (currentUrl.includes('deletemessage') || deletedA || deletedM) {
                var flashMessage = document.createElement('div');
                flashMessage.classList.add('alert', 'alert-success');
                flashMessage.innerHTML = 'Le message a été supprimé avec succès.';
                var titreRecuElement = document.getElementById('flashMessage');
                titreRecuElement.appendChild(flashMessage);
                // Supprimer le message après 3 secondes (3000 millisecondes)
                setTimeout(function() {
                    flashMessage.remove();
                }, 3000);
            }
            if (currentUrl.includes('sendmessage')) {
                var flashMessage = document.createElement('div');
                flashMessage.classList.add('alert', 'alert-success');
                flashMessage.innerHTML = 'Le message a été envoyé avec succès.';
                var titreRecuElement = document.getElementById('flashMessage');
                titreRecuElement.appendChild(flashMessage);
                // Supprimer le message après 3 secondes (3000 millisecondes)
                setTimeout(function() {
                    flashMessage.remove();
                }, 3000);
            }
            if (uptadedread) {
                var flashMessage = document.createElement('div');
                flashMessage.classList.add('alert', 'alert-success');
                flashMessage.innerHTML = 'Le message a été lu.';
                var titreRecuElement = document.getElementById('flashMessage');
                titreRecuElement.appendChild(flashMessage);
                // Supprimer le message après 3 secondes (3000 millisecondes)
                setTimeout(function() {
                    flashMessage.remove();
                }, 3000);
            }
            // Construire la nouvelle URL en ajoutant "/retro_information" à la partie de base de l'URL
            var newUrl = baseUrl + '#retroinfo';
            setTimeout(function() {
                // Rediriger vers la nouvelle URL
                window.location.href = newUrl;
            }, 3000); // 3000 millisecondes (3 secondes)
            
            console.log(currentUrl);
            console.log(baseUrl);
        }
    };
    
