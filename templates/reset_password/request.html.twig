{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <p class="text-center h1 fw-bold mb-0 mx-1 mx-md-4 mt-4">
                            Réinitialiser votre mot de passe
                        </p>
                        <div class="card-body p-md-5">
                            {% for flash_error in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">  
                                    {{ form_start(requestForm) }}
                                        {{ form_row(requestForm.email) }}
                                        <div>
                                            <small>
                                                Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                            </small>
                                        </div>

                                        <button class="btn btn-primary">Envoyer un mail de réinitialisation du mot de passe</button>
                                    {{ form_end(requestForm) }}
                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2"> 
                                    <img src="images/ResetPassword.png" class="img-fluid" alt="Sample image"> 
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
