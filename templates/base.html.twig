<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title> 
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery.dataTables.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/buttons.dataTables.min.css') }}">
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        {% block stylesheets %}{% endblock %}  
            {{ encore_entry_link_tags('app') }}
    </head>
    <body style="background-color: #fffff">  
        <!-- NavBar -->
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_accueil') }}">SNUT Platform</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_accueil') }}">Accueil
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        {% if is_granted('ROLE_AGENT_DISTRICT') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_rmanut') }}">RMA Nut</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_crenas') }}">Bon de commande CRENAS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_creni') }}">Bon de commande CRENI</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_pvrd') }}">Déposer le fichier PVRD</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_retroinformation') }}">Retro informations</a>
                            </li> 
                        {% endif %}
                    </ul> 
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"> 
                            {% if app.user %}
                                <span style='font-weight:bold;'>Bonjour {{ app.user.email }}! &nbsp;
                                <a href="{{ path('app_logout') }}" style="color:#FFF !important;">Se déconnecter</a></span>
                            {% else %}
                                <span style='font-weight:bold;'><a href="{{ path('app_login') }}" style="color:#FFF !important;">Se connecter</a>
                                &nbsp;&nbsp; <a href="{{ path('app_register') }}" style="color:#FFF !important;">S'inscrire</a></span>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End NavBar -->

        {% block body %}{% endblock %}


        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                    <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
                </a>
                <span class="mb-3 mb-md-0 text-muted">© 2023 SNUT</span>
            </div> 
        </footer>
 
        <script src="{{ asset('js/propper.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/moment.min.js') }}"></script>
        <script src="{{ asset('js/jquery.validate.min.js') }}"></script>
        
       {% block javascripts %}{% endblock %}
            {{ encore_entry_script_tags('app') }}
    </body>
</html>
