{% extends 'base_admin.html.twig' %}

{% block title %}Province{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/select2.min.css') }}" type="text/css"/>
{% endblock %}
{% block body %}
<div class="col-md-12">
		<div class="card ">
			<div class="card-header card-header-green card-header-text">
				<div class="card-text">
					<h4 class="card-title">Modifier province</h4>
				</div>
			</div>
			<div class="card-body ">
				{{ form_start(form, {'action': path('app_admin_province_edit', { 'id': province.id }), 'method': 'POST', 'attr': {'enctype':'multipart/form-data', 'class': 'form-horizontal'}}) }}
                <div class="row">
                <label class="col-sm-2 col-form-label">Nom MG</label>
					<div class="col-sm-10">
						<div class="form_group">
							{{ form_widget(form.NomMG) }}
						</div>
					</div>
				</div>
				<div class="row">
					<label class="col-sm-2 col-form-label">Nom FR</label>
					<div class="col-sm-10">
						<div class="form_group">
							{{ form_widget(form.NomFR) }}
						</div>
					</div>
				</div>
				<div class="row">
					<label class="col-sm-2 col-form-label">Chef Lieu</label>
					<div class="col-sm-10">
						<div class="form_group">
							{{ form_widget(form.ChefLieu) }}
						</div>
					</div>
				</div>
				<div class="row  mt-3">
					<label class="col-sm-2 col-form-label">Code ISO</label>
					<div class="col-sm-10">
						<div class="form-group">
							{{ form_widget(form.CodeISO) }}
						</div>
					</div>
				</div>
				<div class="row  mt-3">
					<label class="col-sm-2 col-form-label">Code FIPS</label>
					<div class="col-sm-10">
						<div class="form-group">
							{{ form_widget(form.CodeFIPS) }}
						</div>
					</div>
				</div>
                <div class="row  mt-3">
					<label class="col-sm-2 col-form-label">Superficie</label>
					<div class="col-sm-10">
						<div class="form-group">
							{{ form_widget(form.Superficie) }}
						</div>
					</div>
				</div>
                <div class="row  mt-3">
					<label class="col-sm-2 col-form-label">Population</label>
					<div class="col-sm-10">
						<div class="form-group">
							{{ form_widget(form.Population) }}
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer ">
				{{ form_widget(form.save) }}
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="{{asset('assets/js/select2.min.js')}}"></script>
	<script>
		$(document).ready(function () {
	
				$(".mul-select").select2({
				placeholder: "Choisir province", // placeholder
				tags: true,
				tokenSeparators: ['/', ',', ';', " "]
				});

				$(".mul-select-district").select2({
				placeholder: "Choisir district", // placeholder
				tags: true,
				tokenSeparators: ['/', ',', ';', " "]
				});
						$("#province_districts").empty();
		});

		
	</script>
{% endblock %}
