{% extends 'base_admin.html.twig' %}

{% block title %}Commande semestrielle{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/select2.min.css') }}" type="text/css"/>
{% endblock %}
{% block body %}
<div class="col-md-12">
		<div class="card ">
			<div class="card-header card-header-green card-header-text">
				<div class="card-text">
					<h4 class="card-title">Ajouter commande semestrielle</h4>
				</div>
			</div>
			<div class="card-body ">
				{{ form_start(form, {'action': path('app_commande_semestrielle_new'), 'method': 'POST', 'attr': {'enctype':'multipart/form-data', 'class': 'form-horizontal'}}) }}
                <div class="row">
					<label class="col-sm-2 col-form-label">Année</label>
						<div class="col-sm-10">
							<div class="form_group">
								{{ form_widget(form.AnneePrevisionnelle) }}
							</div>
						</div>
				</div>
				  <div class="row">
					<label class="col-sm-2 col-form-label">Nom</label>
						<div class="col-sm-10">
							<div class="form_group">
								{{ form_widget(form.Nom) }}
							</div>
						</div>
				</div>
                 <div class="row">
                <label class="col-sm-2 col-form-label">Date début</label>
					<div class="col-sm-10">
						<div class="form_group">
							{{ form_widget(form.DateDebut) }}
						</div>
					</div>
				</div>
				   <div class="row">
                <label class="col-sm-2 col-form-label">Date fin</label>
					<div class="col-sm-10">
						<div class="form_group">
							{{ form_widget(form.DateFin) }}
						</div>
					</div>
				</div>
              
				<div class="row">
					<label class="col-sm-2 col-form-label">Activé</label>
					<div class="col-sm-10">
						<div class="form_group">
							{{ form_widget(form.IsActive) }}
						</div>
					</div>
				</div>
				<div class="row  mt-3">
					<label class="col-sm-2 col-form-label">Slug</label>
					<div class="col-sm-10">
						<div class="form-group">
							{{ form_widget(form.Slug) }}
						</div>
					</div>
				</div>
				
			</div>
			<div class="card-footer ">
				{{ form_widget(form.save) }}
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="{{asset('assets/js/select2.min.js')}}"></script>
	<script>
		$(document).ready(function () {
	
				$(".mul-select").select2({
				placeholder: "Choisir province", // placeholder
				tags: true,
				tokenSeparators: ['/', ',', ';', " "]
				});

		});

		
	</script>
{% endblock %}
